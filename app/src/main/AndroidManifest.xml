<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krishibondhuapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_fina"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_fina"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.Email_Registration"></activity>
        <activity android:name=".Activity.Email_Login" />
        <activity android:name=".Activity.AudioPost" />
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.SellingActivity" />
        <activity android:name=".Activity.ProfileActivity" />
        <activity android:name=".Activity.OTPActivity"
                  android:label="Verify Phone Number" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.NewsFeedActivity" />
        <activity android:name=".Activity.DrawerActivity" />
        <activity android:name=".Activity.MainActivity" />
    </application>

</manifest>