<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selling Product"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_gray_border_top"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="3">

            <Spinner
                android:id="@+id/sellingSpinnerCategoryId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/categoryEditTextId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="Catagory" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_gray_border_top"
            android:orientation="horizontal"
            android:weightSum="3">

            <Spinner
                android:id="@+id/sellingSpinnerProductNameId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/productnameEditTextId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="Product Name" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_gray_border_top"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/quantityEtId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="Quantity"
                android:inputType="numberDecimal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/white_gray_border_top"
                android:orientation="horizontal"
                android:weightSum="3">

                <Spinner
                    android:id="@+id/sellingSpinnerUnitId"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:gravity="left" />


                <TextView
                    android:id="@+id/unitEditTextId"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:gravity="center"
                    android:hint="Unit" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_gray_border_top"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/priceEtId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center"
                android:hint="Price"
                android:inputType="number" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="Price" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/jatEtId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:hint="Spices"
                android:background="@drawable/shape"
                android:padding="5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/placeEtId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape"
                android:hint="Place name"
                android:padding="5dp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/pickImagesButtonId"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/defult_button2"
                android:text="Pick Images"
                android:textAllCaps="false"
                android:textColor="#000" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/singlePicPreviewLlayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePreviewId"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_upload" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/sellingPostButtonId"
                android:layout_width="220dp"
                android:layout_height="42dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/defult_button2"
                android:text="POST"
                android:textColor="#000" />


        </LinearLayout>
    </LinearLayout>


</ScrollView>







