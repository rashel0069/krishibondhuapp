<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selling_cardView_Id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/seller_Image_Id"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/profile_icon"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seller_Fullname_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/selling_Date_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="1-jan-2019"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/selling_Time_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="12:00 am"
                    android:textSize="12sp" />

            </LinearLayout>
           <LinearLayout
               android:background="@drawable/input_background"
               android:layout_marginEnd="10dp"
               android:layout_marginStart="20dp"
               android:padding="8dp"
               android:id="@+id/call_SellerLayout_Id"
               android:layout_width="70dp"
               android:gravity="end"
               android:layout_height="60dp"
               android:orientation="vertical">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:src="@drawable/call_pic" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="Call"
                   android:layout_marginTop="5dp"
                   android:textColor="#000"
                   android:textSize="12sp" />
           </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/selling_Category_TvId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="catagory"
                    android:textColor="#5FA619"
                    android:background="@drawable/background_rect"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:background="@drawable/background_rect"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:src="@drawable/product_icon"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="@string/projuct_name"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:textSize="12sp" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/selling_Product_TvId"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:hint="Product name"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp" />

                    </LinearLayout>

                   <LinearLayout
                       android:layout_marginLeft="5dp"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="2">
                       <LinearLayout
                           android:layout_width="90dp"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:layout_marginTop="5dp"
                               android:padding="5dp"
                               android:src="@drawable/scale"
                               android:scaleType="centerInside"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="40dp"
                               android:text="@string/projuct_quantity"
                               android:gravity="center_vertical"
                               android:padding="5dp"
                               android:textSize="12sp" />

                       </LinearLayout>
                       <TextView
                           android:id="@+id/selling_Quantity_TvId"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:textAlignment="center"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:hint="N/A"
                           android:layout_marginLeft="5dp"
                           android:layout_gravity="center_vertical"
                           android:layout_marginTop="5dp"
                           android:textSize="15sp" />

                   </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/background_rect"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:src="@drawable/taka_icon"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="@string/projuct_price"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:textSize="12sp" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/selling_Price_TvId"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:hint="Product price"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:src="@drawable/sack_icon"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:text="@string/projuct_jat"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/selling_JatTv_Id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:hint="N/A"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/background_rect"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:src="@drawable/location_icon"
                                android:scaleType="centerInside"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="@string/projuct_place"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:textSize="12sp" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/selling_PlaceTv_Id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:hint="N/A"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/selling_Product_ImageId"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/profile" />

            <View
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>