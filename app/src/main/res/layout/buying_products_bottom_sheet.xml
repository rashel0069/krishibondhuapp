<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buy_bottomSheetContainerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Buying Product"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/shape"
                tools:ignore="RtlCompat"
                android:text="Catagory"
                android:gravity="center"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/buyingCategorySpinnerId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/shape"
                tools:ignore="RtlCompat"
                android:text="Product Name"
                android:gravity="center"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/buyingProductNameSpinnerId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/buyingJatEtId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape"
                android:hint="spices"
                android:paddingLeft="10dp"
                tools:ignore="RtlCompat" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:background="@drawable/shape"
                android:hint="Description"
                android:paddingLeft="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textAlignment="center"
                android:background="@drawable/shape"
                tools:ignore="RtlCompat"
                android:text="Unit"
                android:gravity="center"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/buyingQuantityEtId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:hint="Quantity"
                android:inputType="number"
                android:textAlignment="center"
                tools:ignore="RtlCompat,RtlHardcoded" />

            <Spinner
                android:id="@+id/buyingUnitSpinnerId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_weight="1"-->
<!--                android:background="@drawable/shape"-->
<!--                android:hint="Price"-->
<!--                android:textAlignment="center"-->
<!--                tools:ignore="RtlCompat" />-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/shape"
                tools:ignore="RtlCompat"
                android:text="Price"
                android:gravity="center"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/buyingPriceEtId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/shape"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Taka"
                android:textColor="#5E8800"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/buyingPlaceName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape"
                android:hint="Place name"
                android:padding="10dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape"
                android:visibility="gone"
                android:hint="Phone No"
                android:padding="10dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/buyingpick_Images_ButtonId"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                android:background="@drawable/defult_button2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="Pick Images"
                android:textAllCaps="false"
                android:textColor="#000" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/singlePicPreviewLlayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePreviewId"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_upload" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/buying_PostButton_Id"
                android:layout_width="220dp"
                android:layout_height="42dp"
                android:background="@drawable/defult_button2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="POST"
                android:textColor="#000" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>







